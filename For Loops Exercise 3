*Date Last Modified: April 20, 2020
*Purpose: To display the different grade groupings of 10 students*/

//import java scanner
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    
    //create scanner object
    Scanner input = new Scanner (System.in);

    //create 6 variables to keep track of the different grade groupings
    int group1 = 0, group2 = 0, group3 = 0, group4 = 0, group5 = 0, group6 = 0;
    //create a variable to store the grade of the user
    int grade;


    //create a for statement to get the grades of 10 students
    for (int i = 0; i<10; i++){
      //prompt the user to enter the grade
      System.out.println("Enter the grade: ");
      //get the grade from the user
      grade = input.nextInt();
      //create an if statement to store the grade in the correct grouping
      if (grade >= 90){
        group1 += 1;
      }
      else if (grade >= 80){
        group2 = group2 + 1;
      }
      else if (grade >= 70){
        group3 = group3 + 1;
      }
      else if (grade >=60){
        group4 = group4 + 1;
      }
      else if (grade >=50){
        group5 = group5 + 1;
      }
      else{
        group6 = group6 + 1;
      }
    }

    //display the groupings to the user
    System.out.println("Grade\t  Number of Students");
    System.out.println("90 - 100%\t\t" + group1);
    System.out.println("80 - 90%\t\t" + group2);
    System.out.println("70 - 80%\t\t" + group3);
    System.out.println("60 - 70%\t\t" + group4);
    System.out.println("50 - 60%\t\t" + group5);
    System.out.println("Under 50%\t\t" + group6);

  }
}
