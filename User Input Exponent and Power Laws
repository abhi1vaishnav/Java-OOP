//import scanner class
import java.util.Scanner;
//import power class
import java.lang.Math;

class Main {
  public static void main(String[] args) {
    //create scanner object to read input from the user
    Scanner keyedInput = new Scanner(System.in);

    //declare variables being used for program
    int choice = 0, base = 0, power = 0, ans = 0;
    //create a do while loop for the program
    while (choice != 4){
      //display the menu of available functions
      System.out.println("--------Cool Power Functions--------");
      System.out.println("1... Find the value of a number squared");
      System.out.println("2... Find the value of a number cubed");
      System.out.println("3... Find the value of a number, to any power");
      System.out.println("4... Exit");
      //get the user's choice
      System.out.println("Enter your choice below: ");
      choice = keyedInput.nextInt();

      if (choice == 1){
        System.out.println("You chose to find the value of a number squared. \nEnter the number");
        base = keyedInput.nextInt();
        ans = (int)Math.pow(base, 2);
        System.out.println("The number is: " + ans);

      }
      else if (choice == 2){
        System.out.println("You chose to find the cube of a number. \nEnter the number: ");
        base = keyedInput.nextInt();
        ans = (int)Math.pow(base, 3);
        System.out.println("The number is: " + ans);
      }
      else if (choice == 3){
        System.out.println("You chose to find the value of a number, to any power. \nEnter the base number below: ");
        base = keyedInput.nextInt();
        System.out.println("Enter the power below: ");
        power = keyedInput.nextInt();
        ans = (int)Math.pow (base, power);
        System.out.println("The number is: " + ans);
      }
      else if (choice == 4) {
        System.out.println("Now exiting the program. Goodbye!");
      }
      else {
          System.out.println("Invalid response");
      }
    }
  }
}
