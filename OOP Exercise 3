class Main {
  public static void main(String[] args) {
    
    //instantiate 5 video game objects
    videoGame v1 = new videoGame();
    videoGame v2 = new videoGame();
    videoGame v3 = new videoGame();
    videoGame v4 = new videoGame();
    videoGame v5 = new videoGame();

    //set each attribute for the every object
    v1.setTitle("Vermon");
    v1.setConsole("Nitendo Switch");
    v1.setRating('M');
    v1.setPrice(71.99);
    v1.setQuantity(9);

    v2.setTitle("Valorant");
    v2.setConsole("XBOX");
    v2.setRating('T');
    v2.setPrice(91.99);
    v2.setQuantity(10);

    v3.setTitle("Hello Kitty");
    v3.setConsole("PS4");
    v3.setRating('E');
    v3.setPrice(34.99);
    v3.setQuantity(2);

    v4.setTitle("Tetaria");
    v4.setConsole("Wii");
    v4.setRating('E');
    v4.setPrice(45.97);
