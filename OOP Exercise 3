    System.out.println("Game \t Title \t\t Console \t Rating \t Price \t\t Quantity");

    System.out.println("1 \t\t" + v1.getTitle() + " \t" + v1.getConsole() + "\t\t" + v1.getRating() + "\t\t$" + v1.getPrice() + "\t\t\t" + v1.getQuantity());

