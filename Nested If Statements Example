    char week, cohort;

    do{
      System.out.println("Enter the week (A/B)");
      week = input.next().charAt(0);
    }while (week != 'A' && week != 'B');

    do{
      System.out.println("Enter the cohort (A/B)");
      cohort = input.next().charAt(0);
    } while(cohort != 'A' && cohort != 'B');

    if (week == 'A'){
      if (cohort == 'A'){
        System.out.println("You do not have school today!");
      }
      else{
        System.out.println("You have school today!");
      }
    }
    if (cohort == 'B'){
      System.out.println("You do not have school today!");
    }

  }
}
