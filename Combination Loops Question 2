Date: April 27, 2020
Purpose: To get the name and sport of three sport teams*/

//import java scanner
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    
    //create scanner object
    Scanner input = new Scanner (System.in);

    //declare variables
    String name, sport;
    
    System.out.println("\n        Sports Teams       ");
    
    for (int i = 0; i < 3; i++){
      //prompt the user to enter the sport team
      System.out.println("\nEnter the name of the sports team: ");
      //get the name of the sports team
      name = input.nextLine();
      
      //prompt the user to enter the sport the sports team plays
      System.out.println("Enter the sport the team plays:");
      //get the sport the team plays
      sport = input.nextLine();

      //print the sport and the team name
      System.out.println("\nTeam Name          Sport");
      System.out.println(name + "       " + sport);

    }

  }
}
