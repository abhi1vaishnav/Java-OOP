*Date Last Modified: April 14, 2020
* Purpose: To display the wind speed of a category x hurricane*/

//import java scanner
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    
    //create scanner object
    Scanner input = new Scanner (System.in);

    //declare variable for getting the category of hurricane from the user
    int cat;

    //prompt the user to enter the category of hurricane
    System.out.println("Enter the hurricane category (1-5):");
    //get the hurricane category from the user
    cat = input.nextInt();

    //create a switch statement for the category the user enters
    switch (cat){
      case 1:
        System.out.println("The wind speed is 74-95 mph or 64-82 kt or 119-153 km/hr.");
        break;
      case 2:
        System.out.println("The wind speed is 96-110 mph 83-95 kt or 154-177 km/hr.");
        break;
      case 3:
        System.out.println("The wind speed is 111-130 mph 96-113 kt or 178-209 km/hr. ");
        break;
      case 4:
        System.out.println("The wind speed is 131-155 mph 114-135 kt or 210-249 km/hr. ");
        break;
      case 5:
        System.out.println("The wind speed is greater than 155 mph or 135 kt or 259 km/hr.");
        break;
      default:
        //print invalid response if the user enters another answer
        System.out.println("Invalid response");
        break;
    }


  }
}
