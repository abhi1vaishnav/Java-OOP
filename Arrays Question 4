*Date Last Modified: June 1, 2020
*Purpose: To collect and display the marks of 20 students*/

//import java scanner
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    
    //create scanner object
    Scanner input = new Scanner(System.in);

    //declare variables
    int high = 0, middle = 0, low = 0;

    //create an array of 20 students
    int marks [] = new int [20];

    //create a for loop to iterate through collecting a mark and storing it
    for (int i = 0; i < 20; i ++){
      System.out.println("Enter mark #" + (i+1) + ":");
      marks[i] = input.nextInt();
      
      //create a for loop to categorize the mark
      if (marks[i] >= 80){
        high ++;
      }
      else if (marks[i] >= 60){
        middle ++;
      }
      else if (marks[i] >= 50){
        low ++;
      }
    }

    System.out.println("Range           Students");
    System.out.println("80 to 100 Marks " + high);
    System.out.println("60 to 79 Marks  " + middle);
    System.out.println("50 to 59 Marks  " + low);

  }
}
