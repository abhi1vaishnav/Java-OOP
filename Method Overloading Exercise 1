import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    Scanner input = new Scanner (System.in);
    
    //get the symbol from the user
    System.out.println("Enter a special character: ");
    String symbol = input.next();

    //get a number for the amount of rows
    System.out.println("Enter a number: ");
    int num = input.nextInt();

    //call each of the methods
    displayPattern(symbol, num);
    displayPattern(symbol);
    displayPattern(num);

  }

  //method displays the symbol for n rows
  public static void displayPattern (String character, int rows){
    //for loop prints the desired rows of the character
    for (int i = 0; i < rows; i ++){
      System.out.println();
      //for loop prints each row with 10 characters
      for (int x = 0; x < 10 ;x ++){
      System.out.print(character);
      }
    }
    System.out.println();
  }
  
  //method displays 6 rows of the specified character
  public static void displayPattern(String character){
    //for loops print 6x10 rows of the character
    for (int i = 0; i < 6; i ++){
      System.out.println();
      for (int x = 0; x < 10 ;x ++){
      System.out.print(character);
      }
  
    }
    System.out.println();
  }


  //method displays % for an variable number of rows
  public static void displayPattern(int rows){
    //print the number of rows of the symbol
    for (int i = 0; i < rows; i ++){
      System.out.println();
      //print the % sign 10 times for each row
      for (int x = 0; x < 10 ;x ++){
      System.out.print("%");
      }
    }
    System.out.println();
  }

}
