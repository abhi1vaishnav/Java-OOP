*Purpose: To calculate the commission which is based on *sales*/

//create scanner class to get the sales for the sales person
import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    //create scanner class
    Scanner input = new Scanner(System.in);

    //declare variables for storing the values of sales an commision
    double sale = 0, com = 0;

    //get the sales from the user
    System.out.println("Enter the amount of sales: ");
    sale = input.nextDouble();

    //make an if statement for the different values of comission based on the amount of sales
    if (sale >= 300){
      //commission is 3% for sales $300 or above
      com = 0.03*sale;
      //round sales to 2 decimal places because it is money
      com = com*100;
      com = Math.round(com);
      com = com/100;
      //display the amount of sales
      System.out.println("Amount of sales: $" + sale);
      //display commission earned
      System.out.println("Commission earned: $" + com);
    }
    else if (sale >= 100){
      //commission is 1% if sales are greater than $100 but less than $300
      com = 0.01*sale;
      //round the commission to 2 decimal places
      com = com*100;
      com = Math.round(com);
      com = com/100;
      System.out.println("Amount of sales: $" + sale);
      System.out.println("Commission earned: $" + com);
    }
    else if (sale < 100){
      //no commission earned for sales less than $100
      System.out.println("Amount of sales: $" + sale);
      System.out.println("NO commission earned.");
    }
    else{
      //if the user enters anything else display a message
      System.out.println("Invalid response");
    }
  }
}
