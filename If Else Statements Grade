*Purpose: To display the grade based on age*/

//import scanner class
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    
    //create scanner object
    Scanner input = new Scanner (System.in);

    //declare and initialize variable for getting the age
    int age = 0;

    //prompt the user to enter their age
    System.out.println("Enter your age: ");
    //get the age of the user
    age = input.nextInt();

    //create an if statement for the grade of the user depending on their age
    if (age == 4){
      //tell the user they are in JK if 4 years old
      System.out.println("Junior Kindergarten");
    }
    else if (age == 5){
      //user that is 5 years old is in SK
      System.out.println("Senior Kindergarten");
    }
    else if (age == 6){
      //user 6 years old is in grade 1
      System.out.println("Grade 1");
    }
    else{
      //if the uer enters anything else display a message
      System.out.println("Grade Unknown");
    }

  }
}
