//import scanner class
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    //create scanner object for no apparent reason
        Scanner keyedInput = new Scanner (System.in);
        //create an array and initialize all the 9 values
        double [ ] marks = {34.7, 54.1, 34.8, 99.6, 43.6, 43.2, 65.8, 44.8, 88.6};
        //this variable keeps the sum of the averages
        double total=0;
        //this variable is the average of all the averages
        double average;
        //let the user know what the marks are
        System.out.println("These are the marks:");
        //create a for loop to print the marks without being repetitive
        for (int i = 0; i<=8; i ++)
        {
          //print all the marks to the user
           System.out.println(marks[i]);
        }
        
        for (int i = 0; i<=8; i ++)
        {
          //calculate the sum of all the marks
            total = total + marks[i];
        }
        //the average is calculated by dividing the toal by the number of averages
        average = total/9;
        //round the average to one decimal place
        average = average * 10;
        average = Math.round(average);
        average = average/10;
        //let the user know we are outputting the average mark with a small phrase
        System.out.println("The average mark is:");
        //output the average once it has been calculated
        System.out.println(average);
  }
}
